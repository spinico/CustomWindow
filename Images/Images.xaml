<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <BitmapImage x:Key="LogoActive" UriSource="logo-active.png"/>
    <BitmapImage x:Key="LogoInactive" UriSource="logo-inactive.png"/>

    <Style x:Key="TitleImageStyle"  TargetType="{x:Type Image}">
        <Setter Property="Source" Value="{DynamicResource LogoActive}"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsActive, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" Value="False">
                <Setter Property="Source" Value="{DynamicResource LogoInactive}"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
    
</ResourceDictionary>